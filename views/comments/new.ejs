<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%=book.title%></h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/books/<%=book._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Comment" name="comment"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-primary btn-block" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>