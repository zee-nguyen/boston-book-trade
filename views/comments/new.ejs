<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="page-heading">Add new comment to <%=book.title%></h1>
        <div class="form-wrapper">
            <form action="/books/<%=book._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Comment" name="comment[text]"></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-primary btn-block" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>