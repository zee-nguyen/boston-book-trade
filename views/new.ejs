<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new book trade</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/books" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Book Name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image">
                </div>
                <div class="form-group">
                    <input class="btn btn-large btn-primary btn-block" type="submit">
                </div>
            </form>
            <a href="/books">Go Back</a>
        </div>
    </div>
</div>

